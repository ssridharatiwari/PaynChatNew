<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.startup.paynchat.activities.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="32dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginTop="15dp"
            android:text="Login with Mobile Number"
            android:textSize="20sp"
            android:textColor="@color/leaf_brown"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fortyfive"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_ediiext"
            android:hint="@string/hint_name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/countryCode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortyfive"
                android:background="@drawable/edittextstyle" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fortyfive"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextstyle"
                android:hint="@string/hint_phone"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColor="@color/leaf_brown"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_above="@+id/submit"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/leaf_brown"
            android:text="@string/message_otp"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/leaf_green"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/login_consultant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/twenty"
            android:text="User Login"
            android:visibility="gone"
            android:textColor="@color/leaf_brown"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reg_consultant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/message_regconsultant"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
